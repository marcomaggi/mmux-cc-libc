	$(MKDIR_P) "$(DESTDIR)$(htmldir)/mmux-cc-libc.html/"
	$(INSTALL) -m 0444 $(builddir)/doc/mmux-cc-libc.html/mmux-cc-libc.css "$(DESTDIR)$(htmldir)/mmux-cc-libc.html/"


