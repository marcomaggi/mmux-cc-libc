#### interface to "make installcheck"

installcheck-local: $(TESTS)
	@RV=0							;\
	for FILE in $(TESTS)					;\
	do echo "running: '$(builddir)/$$FILE'"			;\
	    if ! "$(builddir)/$$FILE"				;\
	    then RV=$$?; break					;\
	    fi							;\
	done							;\
	if test "$$RV" = 77; then exit 0; else exit $$RV; fi	;


